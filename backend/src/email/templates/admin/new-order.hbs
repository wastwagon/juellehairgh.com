{{> header}}

<h1 style="color: #db2777; font-size: 28px; margin-bottom: 10px;">New Order Received! ðŸ“¦</h1>

<p style="font-size: 16px; line-height: 1.6; color: #4b5563;">A new order <strong style="color: #db2777;">#{{orderNumber}}</strong> has been placed on <strong>{{siteName}}</strong> on {{orderDate}}.</p>

<!-- Order Alert Card -->
<div style="background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%); border: 2px solid #f59e0b; border-radius: 12px; padding: 20px; margin: 30px 0; text-align: center; box-shadow: 0 4px 6px rgba(245, 158, 11, 0.1);">
  <p style="margin: 0; font-size: 16px; color: #92400e; font-weight: 600;">Action Required: Please process this order as soon as possible.</p>
</div>

<!-- Order Summary Card -->
<div style="background: linear-gradient(to bottom, #fdf2f8 0%, #ffffff 100%); border: 1px solid #fbcfe8; border-radius: 12px; padding: 30px; margin: 30px 0; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);">
  <h2 style="color: #db2777; font-size: 22px; margin-top: 0; margin-bottom: 25px; font-weight: 600;">Order Summary</h2>
  
  <!-- Order Items with Images -->
  <table style="width: 100%; border-collapse: collapse; margin-bottom: 25px;">
    <thead>
      <tr style="border-bottom: 2px solid #f3f4f6;">
        <th style="text-align: left; padding: 12px 0; font-size: 13px; font-weight: 600; color: #6b7280; text-transform: uppercase; letter-spacing: 0.5px;">Product</th>
        <th style="text-align: center; padding: 12px 0; font-size: 13px; font-weight: 600; color: #6b7280; text-transform: uppercase; letter-spacing: 0.5px; width: 80px;">Quantity</th>
        <th style="text-align: right; padding: 12px 0; font-size: 13px; font-weight: 600; color: #6b7280; text-transform: uppercase; letter-spacing: 0.5px; width: 100px;">Price</th>
      </tr>
    </thead>
    <tbody>
      {{#each orderItems}}
      <tr style="border-bottom: 1px solid #f3f4f6;">
        <td style="padding: 20px 0; vertical-align: top;">
          <table style="width: 100%; border-collapse: collapse;">
            <tr>
              {{#if image}}
              <td style="width: 80px; padding-right: 15px; vertical-align: top;">
                <img src="{{image}}" alt="{{name}}" style="width: 80px; height: 80px; object-fit: cover; border-radius: 8px; border: 1px solid #e5e7eb; background-color: #f9fafb;" />
              </td>
              {{/if}}
              <td style="vertical-align: top;">
                <div style="font-weight: 600; font-size: 15px; color: #111827; margin-bottom: 5px;">{{name}}</div>
                {{#if variant}}
                <div style="font-size: 13px; color: #6b7280; margin-top: 4px;">{{variant}}</div>
                {{/if}}
              </td>
            </tr>
          </table>
        </td>
        <td style="text-align: center; padding: 20px 10px; color: #4b5563; font-size: 15px; font-weight: 500;">{{quantity}}</td>
        <td style="text-align: right; padding: 20px 0; color: #111827; font-size: 15px; font-weight: 600;">{{../currency}} {{total}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <!-- Order Totals -->
  <div style="border-top: 2px solid #e5e7eb; padding-top: 20px; margin-top: 20px;">
    <table style="width: 100%; border-collapse: collapse;">
      <tr style="border-top: 2px solid #e5e7eb; margin-top: 10px;">
        <td style="text-align: right; padding: 15px 0 8px 0; font-size: 18px; color: #111827; font-weight: 700;">Total:</td>
        <td style="text-align: right; padding: 15px 0 8px 0; font-size: 20px; color: #db2777; font-weight: 700;">{{currency}} {{total}}</td>
      </tr>
    </table>
  </div>
</div>

<!-- Order Details Grid -->
<div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin: 30px 0;">
  <div style="background-color: #f9fafb; padding: 20px; border-radius: 8px; border: 1px solid #e5e7eb;">
    <h3 style="color: #db2777; font-size: 16px; font-weight: 600; margin-top: 0; margin-bottom: 15px;">Customer Information</h3>
    <p style="margin: 5px 0; font-size: 14px; color: #4b5563; line-height: 1.6;">
      <strong>Name:</strong> {{customerName}}<br>
      <strong>Email:</strong> {{customerEmail}}<br>
      <strong>Payment Status:</strong> <span style="color: #4b5563; font-weight: 600;">{{paymentStatus}}</span>
    </p>
  </div>
  
  {{#if shippingAddress}}
  <div style="background-color: #f9fafb; padding: 20px; border-radius: 8px; border: 1px solid #e5e7eb;">
    <h3 style="color: #db2777; font-size: 16px; font-weight: 600; margin-top: 0; margin-bottom: 15px;">Shipping Address</h3>
    <p style="margin: 5px 0; font-size: 14px; color: #4b5563; line-height: 1.6;">
      {{shippingAddress.firstName}} {{shippingAddress.lastName}}<br>
      {{shippingAddress.address}}<br>
      {{shippingAddress.city}}, {{shippingAddress.state}}<br>
      {{shippingAddress.country}}<br>
      {{#if shippingAddress.phone}}Phone: {{shippingAddress.phone}}{{/if}}
    </p>
  </div>
  {{/if}}
</div>

<!-- Call to Action -->
<div style="text-align: center; margin: 35px 0;">
  <a href="{{adminOrderUrl}}" style="display: inline-block; background: linear-gradient(135deg, #db2777 0%, #ec4899 100%); color: #ffffff; text-decoration: none; padding: 16px 40px; border-radius: 8px; font-weight: 600; font-size: 16px; box-shadow: 0 4px 12px rgba(219, 39, 119, 0.3);">Manage Order in Admin Panel</a>
</div>

{{> footer}}
